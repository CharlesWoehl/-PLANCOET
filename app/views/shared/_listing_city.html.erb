<div class="row">
  <% @cities.each do |city| %>
    <div class="flex-container col-md-3">
         <div class="flex-item card" style="border-radius:0 !important">
          <% if city.photo&.key? %>
            <div class="pic-card">
              <%= cl_image_tag city.photo.key, class: "card-img zoom" %>
            </div>
          <% else %>
            <div class="pic-card">
              <!-- Placeholder or default image -->
              <%= image_tag 'home/home', class: "card-img zoom" %>
            </div>
          <% end %>
          <div class="category-card">
            <div class="container text-center"><%= city.name %></div>
          </div>
 <% markdown = Redcarpet::Markdown.new(Redcarpet::Render::HTML.new) %>

          <div class="resume-card h-100 p-2"><%= markdown.render(city.infos).html_safe %></div>
          <div class="text-center nav-link">    <%= link_to city.website, "http://#{city.website}", target: "_blank", style: "text-decoration:none" %>

</div>

        </div>
    </div>
  <% end %>
</div>
